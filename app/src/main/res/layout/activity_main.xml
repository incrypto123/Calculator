<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button0" tools:text="0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="@+id/button1"
            android:minWidth="48dp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button4"
            android:minWidth="48dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" tools:text="2" app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button1" android:minWidth="48dp" android:text="2"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:minWidth="48dp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="@+id/button7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" android:minWidth="48dp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button4"
            android:minWidth="48dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button5"
            android:minWidth="48dp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/newNumber"
            android:minWidth="48dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/newNumber"
            android:layout_marginLeft="8dp"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button8" app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button7"
            android:minWidth="48dp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button8" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button8"
            android:minWidth="48dp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEquals" app:layout_constraintStart_toEndOf="@+id/buttonDot"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot" android:minWidth="48dp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDivide" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:minWidth="48dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/newNumber"
    />
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiply" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button6"
            android:minWidth="48dp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlus"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:minWidth="48dp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMinus" app:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button3"
            android:minWidth="48dp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot"
            android:minWidth="48dp"
            app:layout_constraintStart_toEndOf="@+id/button0" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/button0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            android:focusable="true"
            android:focusableInTouchMode="true" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/result"
            app:layout_constraintStart_toStartOf="@+id/result"
            app:layout_constraintEnd_toEndOf="@+id/result"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.464"/>
    <TextView
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:id="@+id/operation" app:layout_constraintEnd_toStartOf="@+id/newNumber"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/newNumber"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>