<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/top_half_layout"
            android:layout_weight="0.5">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal"
                android:hint="Answer"
                android:ems="20"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/text_areas"
                android:textColor="@color/colorAccent"
                android:id="@+id/result"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Operator"
                android:background="@drawable/text_areas"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:id="@+id/operation"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal"
                android:hint="Number"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorAccent"
                android:ems="20"
                android:background="@drawable/text_areas"
                android:id="@+id/newNumber"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttn_layout_bg"
            android:layout_weight="0.5">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button7"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button8"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button9"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonDivide"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button4"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button5"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button6"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonMultiply"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button1"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button2"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button3"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonMinus"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button0"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonDot"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonEquals"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/buttonPlus"
                    android:textColor="@color/btn_letters"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_design"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>